/*! NAV */
*{
  box-sizing: border-box
}
body
  font-family: base-font
  overflow: hidden
/*! HEADER */
.header
  z-index: 4
  width: 100%
  margin-top: 25px
  background-color: rgba(255,255,255,0);
  position: fixed
  transition-property: background-color, margin-top
  transition-duration: .1s , .1s
  transition-delay: 0s, .1s
  .header-container
    margin-left: auto
    margin-right: auto
    width: 100%
    height: 50px
    max-width: 1000px
    display: flex
    justify-content: space-between
    align-items: center
    .logo
      .title
        display: inline-block
        margin: 0
        margin-left: 20px
        font-size: 2em
        color: color-white
        text-decoration: none
    .menu-touch, .menu-touch-quit
      display: none
    .menu
      ul
        margin: 0
        list-style: none
        margin-right: 20px
        li
          float: left
          a
            margin-left: 15px
            margin-right: 15px
            padding: 10px
            color: color-white
            display: inline-block
            text-align: center;
            text-decoration: none
            font-weight: bold;
            font-size: 14px
            &.link-menu:hover
              color: color-gray
  &.active
    background-color: color-white
    box-shadow: 5px 0px 5px rgba(0, 0, 0, .5)
    margin-top: 0
    transition-property: background-color, margin-top
    transition-duration: .1s , .1s
    transition-delay: .1s, 0s
    .logo .title
      color: color-black
    .menu-touch
      span
        color: color-black
        &:active
          color: color-gray
    .menu
      ul
        li
          a
            color: color-black
            &.button__info:hover
              color: color-white
/*! TOP */
.top
  width: 44px;
  height: 44px;
  position: fixed
  z-index 3
  right: 20px;
  bottom: -50px;
  background-color: rgba(color-gray, 0.5)
  border-radius: border-radius
  transition-name: bottom , background-color
  transition-duration: .3s
  &.active
    bottom: 23px
  svg
    display: inline-block
    margin: 0 auto
    max-height: 100%
    max-width: 100%
    polyline
      color: color-white
      stroke: currentColor
  &:hover
    background-color: rgba(color-gray, 0.8)

/*!  HOME */
.home
  width: 100%
  height: 100vh
  overflow: hidden;
  .img
    position: absolute;
    width: 100%
    height: 100%
    img('../img/1.jpg')
    & .pre
      text(alt-font, 40px, color-gray)
      text-align: center
      margin-top: 35vh
      animation-name: show, inTop
      animation-duration: 1s
      animation-fill-mode: forwards
    & .title
      text(base-font, 100px, #FFF, bold)
      text-align: center
      margin-top:  5px
      animation-name: show, inLeft 
      animation-duration: 1s
      animation-fill-mode: forwards
      
/*! Services */
.services
  display: flex
  background-color: background-white
  align-items: center
  flex-wrap: wrap
  .service
    color: color-gray
    flex: 1 1 33.333%
    display: inline-block
    padding: 80px 4% 
    text-align: center
    svg
      color: color-gray
      stroke-dasharray: 1000
      stroke-dashoffset: 1000
    .service-text
      .title
        font-size: 1.5em
        font-weight: bold
      .description
        display: block
        margin-right: auto
        margin-left: auto
        max-width: 360px
        text-align: center
  &.active
    .service
      svg
        animation-name: dash
        animation-duration: 10s
        animation-timing-function: linear
        animation-fill-mode: forwards
  .best-software-container
    background-color: background-lightgray
    width: 100%
    .pre
      margin-top: 50px
      text(alt-font , 16px, color-lightgray)
      text-align: center
    .text
      margin-top: 0
      margin-bottom: 30px
      text(base-font , 48px, color-gray , bold)
      text-align: center
      line-height: 1.5
    .separate
      display: block
      margin-left: auto
      margin-right: auto
      width: 40px
      height: 0
      border-bottom 5px solid color-gray
    .img
      max-width: 100%
      vertical-align: top
      display: block
      margin-top: 40px
      margin-left: auto
      margin-right: auto
      margin-bottom: 50px
/*! ABOUT */
.about
  width: 100%
  display: flex
  .image
    display: flex
    display: inline-block
    position: relative
    height: 600px
    flex: 1 1 50%
    overflow: hidden
    .img
      width: 100%
      img('../img/3.jpg')
      background-origin: center center
      position: absolute
      height: 100%
      left: 0
      animation: scale 20s infinite alternate
  .text
    display: block
    flex: 1 1 50%
    margin-left: 20px
    margin-right: 20px
    margin-bottom: 20px
    .max-width
      max-width: 800px
      margin-left: auto
      margin-right: auto
      .pre
        margin-top: 50px
        text(alt-font , 16px, color-lightgray)
      .text
        margin: 0
        margin-bottom: 10px
        text(base-font , 48px, color-gray , bold)
        line-height: 1.5
        padding: 0
      .separate
        display: block  
        width: 40px
        height: 0
        border-bottom 5px solid color-gray
        margin-bottom: 20px
      .about-info
        p
          line-height: 30px
          text-indent: 25px
          text-align: justify
/*! STUDIO */
.studio
  &-container
    background-color: background-lightgray
    width: 100%
    .pre
      margin-top: 50px
      text(alt-font , 16px, color-lightgray)
      text-align: center
    .text
      margin-top: 0
      margin-bottom: 30px
      text(base-font , 48px, color-gray , bold)
      text-align: center
      line-height: 1.5
    .separate
      display: block
      margin-bottom: 20px
      margin-left: auto
      margin-right: auto
      width: 40px
      height: 0
      border-bottom 5px solid color-gray
    .img
      vertical-align: top
      display: block
      margin-top: 40px
      margin-left: auto
      margin-right: auto
      margin-bottom: 50px
    .specifications
      display: flex
      justify-content: space-around
      padding: 40px
      padding-top: 0
      margin-top: 20px
      margin-bottom: 20px
      .specification
        background-color: color-white
        border-radius: border-radius
        border: 1px solid rgba(color-lightgray, .1)
        display inline-block
        margin-top: 5px
        margin-bottom: 5px
        transition-name: transform, box-shadow
        transition-duration:  .3s
        width: 24%
        &:hover
          transform: translateY(-5px)
          box-shadow: 0 0px 10px rgba(0,0,0,.1)
        &-title
          font-size: 1.2em
          font-weight: bold
          text-align: center
          color: color-gray
        img
          display: block
          vertical-align: top
          margin-left: auto
          margin-right: auto
        &-container
          padding: 10px
          .specification-item
            font-family: base-font
            font-size: 1.1em
            color: color-gray
            text-align: center
            margin-bottom: 30px
  .lesson
    height: 400px
    width: 100%
    overflow: hidden
    position: relative
    &-img
      position: absolute
      img('../img/4.jpg', fixed)
      width: 100%
      height: 100%
      filter: brightness(.15)
    &-info
      position: absolute
      text(alt-font, 1.5em, color-white)
      text-align: justify
      line-height: 2
      padding: 5% 20%
      z-index: 2

/*! PHOTOS */
.photos
  &-container
    width: 100%
    max-width: 1000px
    margin-left: auto
    margin-right: auto
    padding-right: 20px
    padding-left: 20px
    .info
      .pre
        width: 100% 
        margin-top: 50px
        text(alt-font , 16px, color-lightgray)
      .text
        margin-top: 0
        margin-bottom: 30px
        text(base-font , 48px, color-gray , bold)
        line-height: 1.5
      .separate
        display: block
        margin-bottom: 20px
        width: 40px
        height: 0
        border-bottom 1px solid color-gray
    .image-container
      display: grid
      grid-template-columns: repeat(3, 1fr)
      grid-auto-rows: 300px
      justify-content: center
      .image
        display: block
        border: 1px solid color-black
        background-color: rgba(color-gray, .2)
        text-decoration: none
    .load
      margin-right: auto
      margin-left: auto
      .button__info
        outline: 0
        display: block
        margin: 30px 0
        text-decoration: none
        text-align: center
  .testimonials
    height: 400px
    width: 100%
    overflow: hidden
    position: relative
    .testimonial
      padding: 30px
      position: absolute
      img('../img/6.jpeg', fixed)
      width: 100%
      height: 100%
      .author-image
        display: block
        margin-left: auto
        margin-right: auto
        border-radius: 50%
      &-info
        position: absolute
        text(alt-font, 1.5em, color-white)
        text-align: justify
        line-height: 2
        z-index: 2
/*! CONTACT */
.contact
  background-color: background-lightgray
  display: flex
  &-container
    width: 100%
    flex: 1 1 60%
    .max-width
      width: 100%
      max-width: 800px
      margin: 50px auto 50px auto
      padding-left: 20px
      padding-right: 20px
      .pre
        width: 100% 
        text(alt-font , 16px, color-lightgray)
      .text
        margin-top: 0
        margin-bottom: 30px
        text(base-font , 48px, color-gray , bold)
        line-height: 1.5
      .separate
        display: block
        margin-bottom: 20px
        width: 40px
        height: 0
        border-bottom 1px solid color-gray
      .form
        width: 100%
        display: flex
        flex-wrap: wrap
        justify-content: space-between
        align-content: space-between
        input[type="text"],
        input[type="email"], 
        textarea
          outline: 0
          border: 1px solid rgba(color-lightgray, .1)
          border-radius: border-radius
          padding: 12px 10px
          transition: border .3s
          &:focus
            border: 1px solid color-brand
        .name, .email
          display: inline-block
          flex: 1 1
          margin-bottom: 20px
        .name
          margin-right: 10px
        .message
          min-width: 100%
          max-width: 800px
          min-height: 200px
          max-height: 300px
          margin-bottom: 20px
        .submit 
          outline: 0
          width: 100%
          max-width: 800px
          display: block
  &-info
    width: 100%
    flex: 1 1 40%
    padding-top: 20px
    padding-bottom: 20px
    display: flex
    justify-content: center
    align-items: center
    background-color: background-gray
    color: color-white
    .max-width
      width: 100%
      max-width: 500px
      margin-left: 20px
      margin-right: 20px
      .call-us
        width: 100% 
        margin-bottom: 30px
      .call-us, .visit-us
        .title
          margin: 20px 0
          text(base-font , 25px, color-white , bold)
      .visit-us
        width: 100%
/*! FOOTER */
.footer
  background-color: color-black
  .container
    display: flex
    justify-content: space-between
    align-items: center
    width: 100%
    max-width: 1000px
    margin-left: auto
    margin-right: auto
    padding: 50px 20px
    .description
      height: 100%
      .text
        display: block
        margin: 0
        color: color-lightgray
        font-size: 1.5em
    .social
      a
        text-decoration: none
        margin-left: 50px
        .social-icon
          font-size: 30px
          color: color-lightgray
          transition: color .3s
      :hover
        .social-icon
          color: color-white

/*! SPINNER */
  .spinner {
    position: fixed;
    margin: 0 auto;
    padding-top: 40vh
    top: 0;
    bottom: 0;
    right: 0;
    left: 0;
    text-align: center;
    height: 100vh
    font-size: 10px;
    background-color: color-white;
    z-index: 999;
    transition: opacity 2s, visibility 1s linear ; 
  }

  .spinner > div {
    background-color: color-brand;
    height: 10%;
    width: 6px;
    display: inline-block;
    
    -webkit-animation: sk-stretchdelay 1.2s infinite ease-in-out;
    animation: sk-stretchdelay 1.2s infinite ease-in-out;
  }

  .spinner .rect2 {
    -webkit-animation-delay: -1.1s;
    animation-delay: -1.1s;
  }

  .spinner .rect3 {
    -webkit-animation-delay: -1.0s;
    animation-delay: -1.0s;
  }

  .spinner .rect4 {
    -webkit-animation-delay: -0.9s;
    animation-delay: -0.9s;
  }

  .spinner .rect5 {
    -webkit-animation-delay: -0.8s;
    animation-delay: -0.8s;
  }

  @-webkit-keyframes sk-stretchdelay {
    0%, 40%, 100% { -webkit-transform: scaleY(0.4) }  
    20% { -webkit-transform: scaleY(1.0) }
  }

  @keyframes sk-stretchdelay {
    0%, 40%, 100% { 
      transform: scaleY(0.4);
      -webkit-transform: scaleY(0.4);
    }  20% { 
      transform: scaleY(1.0);
      -webkit-transform: scaleY(1.0);
    }
  }
/*! KEYFRAMES */
  @keyframes show
    0% 
      opacity: 0
    100% 
      opacity: 1 
      
  @keyframes inLeft
    0%
      transform: translateX(-100px);
    100%
      transform: translateX(0);
      
  @keyframes inTop
    0%
      transform: translateY(-100px);
    100%
      transform: translateY(0);
      
  @keyframes dash
    to
      stroke-dashoffset: 0;

  @keyframes scale
    to
      transform: scale(1)
    from
      transform: scale(1.2)
  /*! Selection */
  ::selection
    background-color: color-brand
    color: #FFF
/*! MEDIAQUERIES */
  @media screen and (max-width: 1023px)
    .about
      flex-wrap: wrap
      .image
        flex: 1 1 100%
        height: 400px
      .text
        flex: 1 1 100%
    .studio
      &-container
        .specifications
          flex-wrap: wrap
          .specification
            width: 49%
  @media screen and (max-width: 900px)
    .header
      .header-container
        .logo
          margin-left: 20px
        .menu
          ul
            li
              a
                margin-left: 5px
                margin-right: 5px
    .contact
      background-color: background-lightgray
      display: flex
      flex-wrap: wrap
      &-container
        flex: 1 1 100%
  @media screen and (max-width: 785px)
    .photos
      &-container
        .image-container
          grid-template-columns: repeat(2, 1fr)
          grid-auto-rows: 300px
  @media screen and (max-width: 767px)
    .header
      .header-container
        .menu
          position: fixed
          display: block
          top: 0
          bottom: 0
          right: -250px
          transition: right .3s
          ul
            padding-top: 50px
            padding-right: 50px
            background-color: #111
            height: 100vh
            margin-right: 0
            li
              float: none !important
              margin-bottom: 30%
              a
                color: color-white
          &.active
            right: 0
            transition: right .3s ease-out
        .menu-touch
          transition: opacity .3s
          display: inline-block
          margin-right: 20px
          color: color-white
          cursor: pointer
        .menu-touch-quit
          display: block
          position: absolute
          right: 20px
          top: 20px
          color: color-white
    .services
      .service:nth-of-type(3)
        flex: 1 1 100%
        padding-top: 0
    .studio
      &-container
        .specifications
          flex-wrap: wrap
          .specification
            width: 100%
  @media screen and (max-width: 660px)   
    .footer
      .container
        flex-wrap: wrap
        justify-content: center
        .description
          margin-top: 20px
          order: 2
        .social
          margin: 0 
          order: 1
          a:nth-of-type(1)
            margin-left: 0    
  @media screen and (max-width: 525px)
    .photos
      &-container
        .image-container
          grid-template-columns: 1fr
          grid-auto-rows: 300px
  @media screen and (max-width: 475px)
    .footer
      .container
        .social
          a
            margin-left: 20px
  @media screen and (max-width: 445px)
    .contact
      &-container
        .max-width
          .form
            .name
              margin-right: 0
  @media screen and (max-width: 425px)
    .services
      .service
        flex: 1 1 100%
      .service:nth-of-type(2)
        padding-top: 0